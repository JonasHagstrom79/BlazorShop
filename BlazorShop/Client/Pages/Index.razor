@page "/"
@page "/search/{searchText}"
@page "/{categoryUrl}"
@inject IProductService ProductService

<PageTitle>My Shop</PageTitle>

<ProductList />

@code{
    [Parameter]
    public string? CategoryUrl { get; set; } = null;//Här!?

    [Parameter]
    public string? SearchText { get; set; } = null;//Här!?

    //Add lifecyckle method
    protected override async Task OnParametersSetAsync()
    {
        if (SearchText != null) //the search
        {
            await ProductService.SearchProducts(SearchText);
        }
        else
        {
            await ProductService.GetProducts(CategoryUrl); //need to inject the productservce
        }
    }
    //Need to subscribe in the ProductList.razor(The component)
}
